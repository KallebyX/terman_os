# Flask settings
FLASK_APP=run.py
FLASK_ENV=development

# Segurança
SECRET_KEY=sua_chave_ultrasecreta_aqui

# Banco de dados (desenvolvimento local)
# DATABASE_URL=sqlite:///app.db

# Banco de dados (produção - Render PostgreSQL)
DATABASE_URL=postgresql://admin:SENHA@host.render.com:5432/terman_db

# Uploads
UPLOAD_FOLDER=app/static/produtos
MAX_CONTENT_LENGTH=16777216  # 16MB

# Redis (para rate limiting e cache)
# Use memory:// para desenvolvimento sem Redis
REDIS_URL=memory://
# REDIS_URL=redis://localhost:6379/0
# REDIS_URL=redis://red-xxxxx:6379  # Render Redis em produção

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_ou_app_password
MAIL_DEFAULT_SENDER=noreply@terman.com

# Cache
CACHE_TYPE=SimpleCache
# CACHE_TYPE=RedisCache  # Se usar Redis
# CACHE_REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=False